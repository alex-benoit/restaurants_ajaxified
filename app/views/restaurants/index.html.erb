<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li id="restaurant_<%= restaurant.id %>">
      <%= link_to restaurant.name, restaurant_path(restaurant) %> -
      <%= link_to 'Remove', restaurant_path(restaurant), method: :delete, remote: true %>
    </li>
  <% end %>
</ul>
